<div id="outer-container">
	<div id="inner-container">
		<div id="question-row">
			<h1>Question: <%= @question.content %></h1>
		</div>
		<div id="userinput-row">
			<%= form_for :index, url: index_path(:question_id => @question.id, :user_answer => :ans) do %>
				<%= text_field_tag(:answer) %>
				<%= submit_tag("Continue", :class => "submit") %>
			<% end %>
		</div>
	</div>
</div>
<div id="timer-container">
	<div class="timerBar"></div>
</div>