<p>Find me in app/views/play/index.html.erb</p>

<div>
	<div id="questionContainer"> <!-- Question -->
		<img src="../../assets/devil.jpeg" style="width: 100%; float:center; z-index: 100;">
		<div class="questionContent">
			<h2><%= @question.content %></h2>
		</div>
	</div>
	<div id="answerContainer"> <!-- Answers -->

		<h1> Your Answer </h1>

			<%= form_tag({:controller => "play", :action => "answer"}) do %>
			  

			  <div class="field">
			    <%= text_area_tag(:answer) %>
			  </div>

			  <div class="center">
				 <%= submit_tag("Continue", :class => "submit") %>
			  </div>
			<% end %>


			<!-- Group of answers; size depends on total number of answers -->
		</div>
	</div>
	<div class="timerBar"></div>
</div>