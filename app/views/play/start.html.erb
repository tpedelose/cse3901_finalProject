<div id="outer-container">
	<div id="inner-container">
		<div id="start-row">
			<h1>Start Quiz</h1>
		</div>
		
		<%= form_for(@game) do |f| %>
		  <% if @game.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

		      <ul>
		      <% @game.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

			<div class="field">
		    	<%= f.select :max_players, "<option>2</option><option>3</option><option>4</option><option>5</option>".html_safe %> </br>

		    	<%= text_field_tag :player_1, nil, maxlength: 15, size: 20, placeholder: "Player 1" %>
		    	<%= text_field_tag :player_2, nil, maxlength: 15, size: 20, placeholder: "Player 2" %>
		    	<%= text_field_tag :player_3, nil, maxlength: 15, size: 20, placeholder: "Player 3" %>
		    	<%= text_field_tag :player_4, nil, maxlength: 15, size: 20, placeholder: "Player 4" %>
		    	<%= text_field_tag :player_5, nil, maxlength: 15, size: 20, placeholder: "Player 5" %>
		    </div>

 
		    <%= form_for :get_input, url: new_game_path(:player1 => :player_1 ), :html => { :id => "start-form" } do %>
				<%= f.submit "Start!", :class => "submit" %>
			<% end %>
		<% end %>
	</div>
</div>